{% extends 'base.html.twig' %}

{% block title %}Klant index{% endblock %}

{% block body %}
    <h1>Klant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Klantnaam</th>
                <th>Telefoon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for klant in klants %}
            <tr>
                <td>{{ klant.id }}</td>
                <td>{{ klant.klantnaam }}</td>
                <td>{{ klant.telefoon }}</td>
                <td>
                    <a href="{{ path('klant_show', {'id': klant.id}) }}">show</a>
                    <a href="{{ path('klant_edit', {'id': klant.id}) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('klant_new') }}">Create new</a>
{% endblock %}
