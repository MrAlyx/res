<form method="post" action="{{ path('bestelling_delete', {'id': bestelling.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bestelling.id) }}">
    <button class="btn"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
</form>
